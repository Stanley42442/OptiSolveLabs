{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "public": "dist/public",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/.vercel/functions/index:path*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
